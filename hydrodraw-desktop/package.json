{
  "name": "hydrodraw-cad",
  "version": "1.0.0",
  "description": "HydroDraw CAD - Professional 2D Drafting for PT Hidro Dinamika Internasional",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "author": "PT Hidro Dinamika Internasional",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "dxf-parser": "^1.1.2"
  },
  "build": {
    "appId": "com.hidrodinamika.hydrodraw",
    "productName": "HydroDraw CAD",
    "copyright": "Copyright Â© 2024 PT Hidro Dinamika Internasional",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HydroDraw CAD"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*"
    ]
  }
}
